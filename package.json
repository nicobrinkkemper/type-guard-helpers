{
  "name": "type-guard-helpers",
  "version": "1.1.3",
  "description": "A set of helper functions for type guarding in Typescript.",
  "main": "build/main/lib/index.js",
  "types": "build/main/lib/index.d.ts",
  "module": "build/main/module/lib/index.js",
  "repository": "https://github.com/nicobrinkkemper/type-guard-helpers",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "run-p build:*",
    "build:all": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:tsd": "tsd",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "nyc --silent ava",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.lib.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 95 --functions 80 --branches 70",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude src/spec/ --out build/docs --listInvalidSymbolLinks --logLevel Verbose --tsconfig ./tsconfig.json --excludeNotDocumented",
    "doc:json": "typedoc src/ --exclude src/spec/ --json build/docs/typedoc.json --readme ./README.md  --tsconfig ./tsconfig.json --excludeNotDocumented",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-dryrun": "npm pack --dry-run",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish"
  },
  "resolutions": {},
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "ava": "^4.0.0-rc.1",
    "codecov": "^3.8.3",
    "cspell": "^5.10.1",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.7.2",
    "eslint-plugin-import": "^2.24.2",
    "gh-pages": "^3.2.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "standard-version": "^9.3.2",
    "ts-node": "^10.2.1",
    "tsd": "^0.19.0",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.4"
  },
  "files": [
    "/build/main/lib",
    "/build/main/index.js",
    "/build/main/index.d.ts",
    "/build/module/lib",
    "/build/module/index.js",
    "/build/module/index.d.ts",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "tsd": {
    "directory": "./src/spec"
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      },
      "compile": false
    },
    "files": [
      "!build/module/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/spec/**"
    ]
  }
}
